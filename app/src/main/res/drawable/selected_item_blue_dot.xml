<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->

    <gradient android:startColor="#1FB5FC"
        android:endColor="#59CBF7"
        />


    <!-- add some padding for text inside -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <size android:height="5dip" android:width="12dip"/>

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners
        android:topLeftRadius="300dp"
        android:bottomLeftRadius="300dp"
        android:topRightRadius="300dp"
        android:bottomRightRadius="300dp"
        />

</shape>